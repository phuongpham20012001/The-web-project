<div class="col-sm-12 d-flex justify-content-center ">
  <div class="card">
    <div class="card-header">
      <h4>New Product</h4>
    </div>
    <div class="card-body">
      <form action="" method="post">
        <div class="form-row">
          <div class="col-md-4 mb-3">
            <label for="productname">Product Name</label>
            <input type="text" class="form-control" id="product_name" name="product_name" placeholder="Name" required>
          </div>
          <div class="col-md-4 mb-3">
            <label for="productprice">Product Price</label>
            <input type="number" class="form-control" id="product_price" name="product_price" placeholder="Price" required>
          </div>
          <div class="col-md-4 mb-3">
            <label for="productimage">Image</label>
            <div class="input-group">
              <input type="file" class="form-control" id="product_image" name="product_image" placeholder="image" required>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-4 mb-3">
          <label for="productbrand">Brand</label>
            <select class="custom-select" id="product_brand_id" name="product_brand_id" required>
               <option style="font-weight: bold;" selected disabled value="" >Select brand</option>
              {{#each this.brands}}
              <option value="{{brand_id}}">{{brand_name}}</option>
              {{/each}}
            </select>
       
          </div>
          <div class="col-md-4 mb-3">
         <label for="productcategory">Category</label>
            <select class="custom-select" required id="product_category_id" name="product_category_id">
               <option style="font-weight: bold;"  selected disabled value="">Select category</option>
              {{#each this.categories}}
              <option value="{{category_id}}">{{category_name}}</option>
              {{/each}}
            </select>

          </div>
          <div class="col-md-4 mb-3">
            <label for="storage">Storage</label>
            <input type="number" class="form-control" id="product_storage" name="product_storage" placeholder="Storage" required>

          </div>

        </div>
        <div class="form-row">
          <div class="col-md-12 mb-3">
            <label for="description">Descripton</label>
            <textarea class="form-control" id="product_description" placeholder="Descripton" name="product_description"  row="4"></textarea>
          </div>

        </div>
        <input type="hidden" id="product_quantity" name="product_quantity" value=0>
        <a class="btn btn-success" href="/admin/products" role="button" title="Back to List">
          <i class="fa fa-backward" aria-hidden="true"></i>
        </a>
        <button type="submit" class="btn btn-primary">
          <i class="fa fa-check" aria-hidden="true"></i>
          Save
        </button>
      </form>
    </div>
    <div class="card-footer text-muted">
      Footer
    </div>
  </div>
</div>