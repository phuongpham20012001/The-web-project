<div class="col-sm-12 d-flex justify-content-center ">
<div class="card">
  <div class="card-header">
    <h4>Edit Category</h4>
  </div>
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="txtCatID">#</label>
        <input type="text" class="form-control" id="txtCatID" name="category_id" readonly value="{{this.category.category_id}}">
      </div>
      <div class="form-group">
        <label for="txtCatName">Category</label>
        <input type="text" class="form-control" id="txtCatName" name="category_name" autofocus
          value="{{this.category.category_name}}">
      </div>
      <a class="btn btn-success" href="/admin/categories" role="button" title="Back to List">
        <i class="fa fa-backward" aria-hidden="true"></i>
      </a>
      {{!-- <button type="submit" class="btn btn-danger" title="Remove Category" formaction="/admin/categories/del">
        <i class="fa fa-trash" aria-hidden="true"></i>
      </button> --}}
      <button type="submit" class="btn btn-primary" formaction="/admin/categories/update">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </form>
  </div>
  <div class="card-footer text-muted">
    Footer
  </div>
</div>
</div>